extends layout

block content
    h1= title

    each record in record_list
        div(class='card' style='width: 18rem')
            img(src='#' class='card-img-top' alt='record-image')
            div(class='card-body')
                h5(class='card-title') 
                    a(href=record.url) #{record.title}
                p(class='card-text') 
                    a(href=record.artist.url) #{record.artist.name}
                    p
                    a(href=record.label.url) #{record.label.name}
                    p
                    a(href=record.genre.url) #{record.genre.name}

    else
            li There are no records to display.
