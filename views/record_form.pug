extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='Name of record' name='title' required='true' value=(undefined===record ? '' : record.title) )
    div.form-group
      label(for='artist') Artist:
      input#artist.form-control(type='text', placeholder='Artist Name' name='artist' required='true' value=(undefined===record ? '' : record.artist) )
    div.form-group
      label(for='label') Label:
      input#label.form-control(type='text', placeholder='Label' name='label' required='true' value=(undefined===record ? '' : record.label))
    div.form-group
      label(for='format') Format:
      select#format.form-control(type='select', placeholder='Select Format' name='format' required='true' value=(undefined===record ? '' : record.format))
        for format in formats
          if record
            option(value=format._id selected=(format._id.toString()===record.format._id.toString() ? 'selected' : false) ) #{format.name}
          else
            option(value=format._id) #{format.name}
    div.form-group
      label(for='quantity') Quantity:
      input#quantity.form-control(type='number', name='quantity' required='true' value=(undefined===record ? '1' : record.quantity))
    div.form-group
      label(for='condition') Condition:
      input#condition.form-control(type='text', placeholder='VG+' name='condition' value=(undefined===record ? '' : record.condition) required='true')
    div.form-group
      label Genre:
      div
        for genre in genres
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='genre', id=genre._id, value=genre._id, checked=genre.checked )
            label(for=genre._id) #{genre.name}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg